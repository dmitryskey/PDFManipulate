{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "type": "shell",
            "command": "${workspaceRoot}/node_modules/.bin/babel",
            "args": [
                "templates/src",
                "--out-dir",
                "templates/lib",
                "-w",
                // "--minified",
                "--comments=false"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "label": "typescript",
            "type": "typescript",
            "tsconfig": "templates/src/USI9/tsconfig.json",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "maven",
            "type": "shell",
            "command": "cd ${workspaceRoot}/iTextService; mvn",
			"args": [
				"clean package exec:java"
            ],
            "group": "build"
		}
    ]
}